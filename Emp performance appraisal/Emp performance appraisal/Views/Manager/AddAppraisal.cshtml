@using Emp_performance_appraisal.CompetencyEnum;
@model Emp_performance_appraisal.Models.Appraisal




@*<select asp-items="Html.GetEnumSelectList<TechCompetencies>()"  class="form-control"></select>*@
@if (ViewBag.success !=null)
{
    <div class="alert alert-success">@ViewBag.success</div>
}

@{

    <form asp-action="AddAppraisal" asp-controller="Manager" method="post">
        <div class="form-group col-md-4">
            <label class="form-label">Employee</label><br/>
            <select col-md-4 class="form-select" asp-for="EmpID">
                @foreach (var k in ViewBag.employees)
                {
                    <option value="none" selected disabled hidden>Select an Option</option>
                    <option value="@k.EmpID">@k.Name - @k.EmpID</option>
                }
            </select>
        </div>
        <div class="form-group col-md-4">
            <label>Manager ID</label>
            <select asp-for="ManagerID">
            <option selected value="@ViewBag.uid">@ViewBag.uid</option>
            </select>
        </div>
        <div class="form-group col-md-4">
            <label for="exampleFormControlSelect2">Select Tech Competency</label>
            <select multiple="multiple" asp-items="Html.GetEnumSelectList<TechCompetencies>()" class="form-control" asp-for="TCompetency" required></select>
        </div>
        <div class="form-group col-md-4">
            <label for="exampleFormControlSelect2">Select Behavioural Competency</label>
            <select multiple="multiple" asp-items="Html.GetEnumSelectList<BehaviouralCompetencies>()" class="form-control" asp-for="BCompetency" required></select>
        </div>
        <div class="form-group col-md-4">
            <label for="exampleFormControlTextarea">Objectives</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" asp-for="Objectives"></textarea>
        </div>

        <div class="form-group col-md-4">
            <label for="exampleFormControlTextareastartdate">Start Date</label>
            <input type="date" class="form-control" asp-for="StartDate">
        </div>
        <div class="form-group col-md-4">
            <label for="exampleFormControlTextareaenddate">End Date</label>
            <input type="date" class="form-control" asp-for="EndDate" required>
        </div>
        <div>
        <input class="btn btn-primary mt- " type="submit" value="Submit Appraisal">
        </div>
        
    </form>
}


